<Window x:Class="PoB_Notes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoB_Notes"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="800" MinWidth="1150">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Style/DescriptionStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="AllGrid" Background="#040608" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Description" Text="{Binding DescriptionText }" 
                   TextElement.Foreground="#A2A2A2" FontSize="16" Grid.Row="0" 
                   Margin="10,3,10,3" VerticalAlignment="Top"/>

        <Grid x:Name="ButtonBlock" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0" Margin ="5,1,5,1">
                <Button Style="{StaticResource NormalButtonColorStyle}" Content="НОРМАЛЬНЫЙ"/>
                <Button Style="{StaticResource FireButtonColorStyle}" Content="ОГОНЬ"/>
                <Button Style="{StaticResource StrengthButtonColorStyle}" Content="СИЛА"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1" Margin ="5,1,5,1">
                <Button Style="{StaticResource MagicButtonColorStyle}" Content="МАГИЧЕСКИЙ"/>
                <Button Style="{StaticResource ColdButtonColorStyle}" Content="ХОЛОД"/>
                <Button Style="{StaticResource DexterityButtonColorStyle}" Content="ЛОВКОСТЬ"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="2" Margin ="5,1,5,1">
                <Button Style="{StaticResource RareButtonColorStyle}" Content="РЕДКИЙ"/>
                <Button Style="{StaticResource LightningButtonColorStyle}" Content="МОЛНИЯ"/>
                <Button Style="{StaticResource IntelligenceButtonColorStyle}" Content="ИНТЕЛЕКТ"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="3" Margin ="5,1,5,1">
                <Button Style="{StaticResource UniqueButtonColorStyle}" Content="УНИКАЛЬНЫЙ"/>
                <Button Style="{StaticResource ChaosButtonColorStyle}" Content="ХАОС"/>
                <Button Style="{StaticResource DefaultButtonColorStyle}" Content="СТАНДАРТ"/>
            </StackPanel>
        </Grid>
        <TextBox x:Name="UserInput" Style="{StaticResource UserInputTextBoxStyle}" Grid.Row="2"/>
    </Grid>
</Window>
